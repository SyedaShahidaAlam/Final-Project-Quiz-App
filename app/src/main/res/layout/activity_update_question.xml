<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Question ID -->
        <EditText
            android:id="@+id/questionIdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Question ID"
            android:inputType="number" />

        <!-- Search Button -->
        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Question"
            android:layout_marginTop="16dp" />

        <!-- Question Text -->
        <EditText
            android:id="@+id/questionInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Question Text"
            android:layout_marginTop="16dp" />

        <!-- Option 1 -->
        <EditText
            android:id="@+id/option1Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 1" />

        <!-- Option 2 -->
        <EditText
            android:id="@+id/option2Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 2" />

        <!-- Option 3 -->
        <EditText
            android:id="@+id/option3Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 3" />

        <!-- Option 4 -->
        <EditText
            android:id="@+id/option4Input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Option 4" />

        <!-- Correct Answer -->
        <EditText
            android:id="@+id/correctAnswerInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correct Answer" />

        <!-- Update Button -->
        <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Question"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
